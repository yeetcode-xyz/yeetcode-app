{
  "name": "yeetcode-app",
  "productName": "YeetCode",
  "version": "0.1.0",
  "description": "YeetCode - Competitive Programming Practice App",
  "main": "src/index.js",
  "config": {
    "forge": "./forge.config.cjs"
  },
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build",
    "package": "npm run build && electron-forge package",
    "package:builder": "npm run build && electron-builder build --publish never",
    "package:publish": "electron-builder build --publish always",
    "package:mac-unsigned": "npm run build && electron-builder build -c.mac.identity=null --publish never",
    "make": "npm run build && electron-forge make",
    "publish": "npm run build && electron-forge publish",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "enforce-precommit-hooks": "lint-staged",
    "test": "npx vitest",
    "test:ui": "npx vitest --ui",
    "test:run": "npx vitest run",
    "test:coverage": "npx vitest run --coverage",
    "test:e2e": "npx playwright test --project=electron",
    "test:e2e:headed": "npx playwright test --project=electron --headed",
    "test:e2e:debug": "npx playwright test --project=electron --debug",
    "test:e2e:ui": "npx playwright test --project=electron --ui",
    "test:all": "npm run test:run && npm run test:e2e",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "productName": "YeetCode",
    "appId": "com.yeetcode.app",
    "icon": "yeetcodeicon.icns",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!src/test",
      "!e2e",
      "!scripts",
      "!*.md"
    ],
    "publish": {
      "provider": "s3",
      "bucket": "yeetcode-bucket"
    },
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "default",
          "arch": [
            "universal"
          ]
        }
      ],
      "artifactName": "${productName}.${ext}",
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "notarize": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "${productName}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}.${ext}"
    },
    "linux": {
      "artifactName": "${productName}-${arch}.${ext}",
      "target": [
        {
          "target": "deb",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "Development"
    }
  },
  "keywords": [],
  "author": "yeetcode",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "axios": "^1.10.0",
    "dotenv": "^16.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "framer-motion": "^12.23.6",
    "posthog-js": "^1.257.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^4.7.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@electron/notarize": "^3.0.1",
    "@playwright/test": "^1.53.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "37.1.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "semver": "^7.7.2",
    "tailwindcss": "^4.1.11",
    "vite": "^5.0.0",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.0.0",
    "@rollup/rollup-darwin-x64": "^4.0.0",
    "@rollup/rollup-win32-x64-msvc": "^4.0.0"
  },
  "type": "commonjs"
}
